<div class="container">
  <h1 class="text-center">All cocktails available</h1>
  <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary" %>
  <div class="row">
  <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card">
        <div class="card-description">
          <h2><%= link_to cocktail.name , cocktail_path(cocktail) %></h2>
        </div>
      </div>
    </div>
    <%end %>
  </div>
</div>

